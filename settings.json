// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "vim_mode": true,
  "ui_font_size": 13,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "toolbar": { "show": false, "breadcrumbs": false, "quick_actions": false },
  "tab_bar": { "show": true }, // this line disable the tab bar if setting to false
  "indent_guides": {
    "enabled": false
  },
  "cursor_blink": false,
  "buffer_font_size": 13,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#09090bEE",
    "panel.background": "#00000011",
    "editor.background": "#00000011",
    "tab_bar.background": "#00000022",
    "terminal.background": "#00000011",
    "toolbar.background": "#00000011",
    "tab.inactive_background": "#00000011",
    "tab.active_background": "#3f3f4650",
    "border": "#00000033",
    "status_bar.background": "#000000EE",
    "title_bar.background": "#000000EE",
    "border.variant": "#000000EE",
    "scrollbar.track.background": "#52525bEE",
    "scrollbar.track.border": "#000000EE",
    "scrollbar.thumb.background": "#52525b30",
    "scrollbar.thumb.border": "#00000000",
    "elevated_surface.background": "#000000EE",
    "surface.background": "#000000EE",
    "editor.active_line_number": "#ffffffcc",
    "editor.gutter.background": "#00000000",
    "editor.indent_guide": "#ffffff30",
    "editor.indent_guide_active": "#ffffff80",
    "editor.line_number": "#ffffff80",
    "editor.active_line.background": "#3f3f4640"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  }
}
